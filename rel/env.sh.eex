#!/bin/sh
# Grab all the environment variables from the json object, parse them and export them.
echo $RELEASE_CONFIG | sed "1s/'//g" | jq -r 'keys[] as $k | "export \($k)=\(.[$k])"' > variables
source variables

if [ "$RELEASE_COMMAND" = "start" ]; then
  echo "Beginning migration script..."
  /app/bin/goots eval "Goots.Release.migrate()"
fi
